{
  "name": "dg-lab-mcp",
  "version": "1.1.0",
  "description": "MCP SSE Server for DG-LAB device control",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "dg-lab-mcp": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "build": "node scripts/build.mjs",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "prepublishOnly": "npm run build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/admilkjs/sse-dg-lab"
  },
  "homepage": "https://github.com/admilkjs/sse-dg-lab#readme",
  "bugs": {
    "url": "https://github.com/admilkjs/sse-dg-lab/issues"
  },
  "keywords": [
    "mcp",
    "sse",
    "dg-lab",
    "websocket",
    "device-control"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^5.0.6",
    "@types/uuid": "^11.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "fast-check": "^4.5.3",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "express": "^5.2.1",
    "uuid": "^13.0.0",
    "ws": "^8.19.0"
  }
}
